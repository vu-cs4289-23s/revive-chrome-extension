{
    "manifest_version": 3,
    "name": "Revive",
    "version": "1.0.0",
    "description": "A Chrome extension to help you find secondhand clothing.",
    "action": {
        "default_popup": "index.html"
    },"permissions": [
        "https://www.uniqlo.com/",
        "file:///"
    ],
    "content_scripts": [
        {
            "matches": ["https://www.uniqlo.com/us/en/products/*"],
            "js": ["fetch_product.js"]
          },
          {
            "matches": ["file:///index.html"],
            "js": ["display_product.js"]
          }
    ]
}